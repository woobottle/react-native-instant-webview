{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib/typescript",
    "rootDir": "src",
    "paths": {
      "react-native-instant-webview": ["./src/index"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/__tests__", "example"]
}
